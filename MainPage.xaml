<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Calstructure"
             x:Class="Calstructure.MainPage">

    <StackLayout BackgroundColor="Black">
        <Grid  HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Text="Circular" Clicked="OnCircularButtonClicked" HorizontalOptions="Center" VerticalOptions="Center"/>
            <Button Grid.Column="1" Text="Parabolic" Clicked="OnParabolicButtonClicked" HorizontalOptions="Center" VerticalOptions="Center"/>
            <Button Grid.Row="1" Grid.Column="0" Text="In-Plane Strength" Clicked="OnInPlaneStrengthButtonClicked" HorizontalOptions="Center" VerticalOptions="Center"/>
            <Button Grid.Row="2" Grid.Column="2" Text="Out-of-Plane Strength" Clicked="OnOutOfPlaneStrengthButtonClicked" VerticalOptions="Center" HorizontalOptions="Center"/>
        </Grid>
    </StackLayout>
</ContentPage>
