<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calstructure.Views.InPlaneStrengthCalculatorPage"
             Title="InPlaneStrengthCalculatorPage">
    
    <StackLayout>
        <Entry Placeholder="Enter value for El_i" Text="{Binding Eli}" 
               BackgroundColor="White" HorizontalTextAlignment="Center" Keyboard="Numeric"/>

        <Entry Placeholder="Enter value for K_i" Text="{Binding Ki}" 
               BackgroundColor="White" HorizontalTextAlignment="Center" Keyboard="Numeric"/>

        <Entry Placeholder="Enter value for L_d" Text="{Binding Ld}" 
               BackgroundColor="White" HorizontalTextAlignment="Center" Keyboard="Numeric"/>

        <Label Text="{Binding Pei}" FontSize="Large" HorizontalOptions="CenterAndExpand"/>

        <Button Text="AC" HorizontalOptions="Center" WidthRequest="100" Clicked="Button_Clicked" />
        <Button Text="Ki Table" Clicked="Button_Clicked_1" HorizontalOptions="Center" WidthRequest="100"/>
        <Button Text="Info" Clicked="Button_Clicked_2" WidthRequest="60"/>
    </StackLayout>
</ContentPage>