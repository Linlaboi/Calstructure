<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calstructure.Views.ArchAngleContentPage"
             Title="ArchAngleContentPage">

    <StackLayout>
        <Image Source="theta_formula.png" HorizontalOptions="CenterAndExpand"/>

        <Label Text="n (in degrees)" FontSize="Medium" HorizontalOptions="CenterAndExpand"/>
        <Entry x:Name="nEntry" Placeholder="n" Text="{Binding N}" 
               BackgroundColor="White" HorizontalTextAlignment="Center" Keyboard="Numeric"/>

        <Label Text="{Binding ThetaResult}" FontSize="Large" HorizontalOptions="CenterAndExpand"/>

        <Button Text="AC" HorizontalOptions="Center" WidthRequest="100" Clicked="Button_Clicked" />
        <Button Text="Info" Clicked="Button_Clicked_1" WidthRequest="60"/>
    </StackLayout>
</ContentPage>