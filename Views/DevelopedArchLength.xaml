<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calstructure.Views.DevelopedArchLength"
             Title="DevelopedArchLength">
    
    <StackLayout>
        <Label Text="R (Radius)" FontSize="Medium" HorizontalOptions="CenterAndExpand"/>
        <Entry Placeholder="R" Text="{Binding R}" 
               BackgroundColor="White" HorizontalTextAlignment="Center" Keyboard="Numeric"/>

        <Label Text="Theta (Angle in radians)" FontSize="Medium" HorizontalOptions="CenterAndExpand"/>
        <Entry Placeholder="Theta" Text="{Binding Theta}" 
               BackgroundColor="White" HorizontalTextAlignment="Center" Keyboard="Numeric"/>

        <Label Text="{Binding LdResult}" FontSize="Large" HorizontalOptions="CenterAndExpand"/>

        <Button Text="AC" HorizontalOptions="Center" WidthRequest="100" Clicked="Button_Clicked"/>
        <Button Text="Info" Clicked="Button_Clicked_1" WidthRequest="60"/>
    </StackLayout>
    
</ContentPage>